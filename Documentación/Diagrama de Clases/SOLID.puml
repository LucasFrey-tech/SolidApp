@startuml SOLID_DB

left to right direction
skinparam linetype ortho
skinparam packageStyle rectangle
skinparam classAttributeIconSize 0

package "USUARIOS" {

    class Usuario {
        -Id: int
        -Correo: string
        -Clave: string
        -Deshabilitado: boolean
        -Nombre: string
        -Apellido: string
        -Imagen: text
        -Direccion: string
        -Rol: string
        -Fecha_Registro: datetime
        -Ultima_Conexion: datetime
        -Ultimo_Cambio: datetime
    }

    class Donador {
        -Id: int
        -Puntos: int
        -Id_Usuario: int
    }

    class Empresa {
        -Id: int
        -NroDocumento: int
        -Razon_Social: string
        -Nombre_Fantasia: string
        -Descripcion: text
        -Rubro: string
        -Telefono: string
        -Direccion: string
        -Web: string
        -Verificada: boolean
        -Deshabilitado: boolean
        -Fecha_Registro: date
        -Ultimo_Cambio: datetime
    }

    class Organizacion {
        -Id: int
        -NroDocumento: int
        -Verificada: boolean
        -Deshabilitado: boolean
        -Razon_Social: string
        -Nombre_Fantasia: string
        -Descripcion: text
        -Telefono: string
        -Direccion: string
        -Web: string
        -Fecha_Registro: date
        -Ultimo_Cambio: datetime
    }

    class Usuarios_Empresa {
        -Id: int
        -Id_Usuario: int
        -Id_Empresa: int
    }

    class Usuarios_Organizacion {
        -Id: int
        -Id_Usuario: int
        -Id_Organizacion: int
    }
}

package "CAMPAÑAS" {

    class Campaña {
        -Id: int
        -Estado: string
        -Titulo: string
        -Descripcion: text
        -Fecha_Inicio: date
        -Fecha_Fin: date
        -Fecha_Registro: date
        -Objetivo: int
        -Ultimo_Cambio: datetime
    }

    class Imagen_Campaña {
        -Id: int
        -Imagen: text
    }
}

package "DONACIONES" {

    class Donacion {
        -Id: int
        -Titulo: string
        -Detalle: text
        -Tipo: string
        -Cantidad: int
        -Estado: string
        -Fecha_Registro: datetime
    }

    class Imagen_Donacion {
        -Id: int
        -Imagen: text
    }
}

package "BENEFICIOS" {

    class Beneficio {
        -Id: int
        -Titulo: string
        -Tipo: string
        -Detalle: text
        -Cantidad: int
        -Fecha_Registro: datetime
        -Ultimo_Cambio: datetime
    }

    class Imagen_Beneficio {
        -Id: int
        -Imagen: text
    }
}

package "MULTIMEDIA" {

    class Imagen_Empresa {
        -Id: int
        -Logo: text
        -Banner: text
    }

    class Imagen_Organizacion {
        -Id: int
        -Logo: text
        -Banner: text
    }
}

' ========================
' RELACIONES ORDENADAS
' ========================

Usuario "1" -right- "1" Donador
Usuario "1" -down- "0..*" Usuarios_Empresa
Usuario "1" -down- "0..*" Usuarios_Organizacion

Empresa "1" -down- "0..*" Beneficio
Empresa "1" -down- "0..*" Imagen_Empresa
Empresa "1" -left- "0..*" Usuarios_Empresa

Organizacion "1" -down- "0..*" Campaña
Organizacion "1" -down- "0..*" Imagen_Organizacion
Organizacion "1" -left- "0..*" Usuarios_Organizacion

Campaña "1" -down- "0..*" Donacion
Campaña "1" -right- "0..*" Imagen_Campaña

Donador "1" -down- "0..*" Donacion

Donacion "1" -right- "0..*" Imagen_Donacion

Beneficio "1" -right- "0..*" Imagen_Beneficio

@enduml